					}
					
				}
			];
			var list = document.getElementById('list');
			var str = '';
			//当前第几页
			var page = 1;
			//每页显示几条数据
			var len = 3;
			var start = (page-1)*len;
			var end = start+len;
			if(end>data.length){
				end = data.length;
			}
			/*
			 	page  len   
			 	 1     2     0,1
			 	 2     2     2,3
			 	 3     2     4,5
			 * 
			 * 
			 * */
			for(var i=start;i<end;i++){
				str += `<li>
				<p>姓名：${data[i].name}</p>
				<div>性别：${data[i].sex}</div>
				<p>年龄：${data[i].age}</p>
				<dl>
					<dt>${data[i].like.title}</dt>`;
					for(var k in data[i].like.info){
						str += '<dd>'+data[i].like.info[k]+'</dd>';
					}
					str += `</dl>
				<span>${data[i].friends.title}</span>
				<ul>`;
				for(var k in data[i].friends.info){
					str += '<li>'+data[i].friends.info[k]+'</li>';
				}
				str += '</ul></li>';
					
			}
			list.innerHTML = str;
